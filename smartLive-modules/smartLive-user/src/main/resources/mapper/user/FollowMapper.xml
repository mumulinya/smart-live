<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartLive.follow.mapper.FollowMapper">
    
    <resultMap type="com.smartLive.user.domain.Follow" id="FollowResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="followUserId"    column="follow_user_id"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectFollowVo">
        select id, user_id, follow_user_id, create_time from tb_follow
    </sql>

    <select id="selectFollowList" parameterType="com.smartLive.user.domain.Follow" resultMap="FollowResult">
        <include refid="selectFollowVo"/>
        <where>  
            <if test="userId != null  and userId != ''"> and user_id = #{userId}</if>
            <if test="followUserId != null  and followUserId != ''"> and follow_user_id = #{followUserId}</if>
        </where>
    </select>
    
    <select id="selectFollowById" parameterType="Long" resultMap="FollowResult">
        <include refid="selectFollowVo"/>
        where id = #{id}
    </select>

    <insert id="insertFollow" parameterType="com.smartLive.user.domain.Follow" useGeneratedKeys="true" keyProperty="id">
        insert into tb_follow
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id,</if>
            <if test="followUserId != null and followUserId != ''">follow_user_id,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null and userId != ''">#{userId},</if>
            <if test="followUserId != null and followUserId != ''">#{followUserId},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateFollow" parameterType="com.smartLive.user.domain.Follow">
        update tb_follow
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null and userId != ''">user_id = #{userId},</if>
            <if test="followUserId != null and followUserId != ''">follow_user_id = #{followUserId},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFollowById" parameterType="Long">
        delete from tb_follow where id = #{id}
    </delete>

    <delete id="deleteFollowByIds" parameterType="String">
        delete from tb_follow where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>