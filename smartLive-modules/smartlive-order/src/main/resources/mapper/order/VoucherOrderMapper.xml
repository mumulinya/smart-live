<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartLive.order.mapper.VoucherOrderMapper">
    
    <resultMap type="com.smartLive.order.domain.VoucherOrder" id="VoucherOrderResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="voucherId"    column="voucher_id"    />
        <result property="payType"    column="pay_type"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
        <result property="payTime"    column="pay_time"    />
        <result property="useTime"    column="use_time"    />
        <result property="refundTime"    column="refund_time"    />
        <result property="updateTime"    column="update_time"    />
    </resultMap>

    <sql id="selectVoucherOrderVo">
        select id, user_id, voucher_id, pay_type, status, create_time, pay_time, use_time, refund_time, update_time from tb_voucher_order
    </sql>

    <select id="selectVoucherOrderList" parameterType="com.smartLive.order.domain.VoucherOrder" resultMap="VoucherOrderResult">
        <include refid="selectVoucherOrderVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="voucherId != null "> and voucher_id = #{voucherId}</if>
            <if test="payType != null  and payType != ''"> and pay_type = #{payType}</if>
            <if test="status != null  and status != ''"> and status = #{status}</if>
            <if test="payTime != null "> and pay_time = #{payTime}</if>
            <if test="useTime != null "> and use_time = #{useTime}</if>
            <if test="refundTime != null "> and refund_time = #{refundTime}</if>
        </where>
    </select>
    
    <select id="selectVoucherOrderById" parameterType="Long" resultMap="VoucherOrderResult">
        <include refid="selectVoucherOrderVo"/>
        where id = #{id}
    </select>

    <insert id="insertVoucherOrder" parameterType="com.smartLive.order.domain.VoucherOrder">
        insert into tb_voucher_order
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="userId != null">user_id,</if>
            <if test="voucherId != null">voucher_id,</if>
            <if test="payType != null and payType != ''">pay_type,</if>
            <if test="status != null and status != ''">status,</if>
            <if test="createTime != null">create_time,</if>
            <if test="payTime != null">pay_time,</if>
            <if test="useTime != null">use_time,</if>
            <if test="refundTime != null">refund_time,</if>
            <if test="updateTime != null">update_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="userId != null">#{userId},</if>
            <if test="voucherId != null">#{voucherId},</if>
            <if test="payType != null and payType != ''">#{payType},</if>
            <if test="status != null and status != ''">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
            <if test="payTime != null">#{payTime},</if>
            <if test="useTime != null">#{useTime},</if>
            <if test="refundTime != null">#{refundTime},</if>
            <if test="updateTime != null">#{updateTime},</if>
         </trim>
    </insert>

    <update id="updateVoucherOrder" parameterType="com.smartLive.order.domain.VoucherOrder">
        update tb_voucher_order
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="voucherId != null">voucher_id = #{voucherId},</if>
            <if test="payType != null and payType != ''">pay_type = #{payType},</if>
            <if test="status != null and status != ''">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
            <if test="payTime != null">pay_time = #{payTime},</if>
            <if test="useTime != null">use_time = #{useTime},</if>
            <if test="refundTime != null">refund_time = #{refundTime},</if>
            <if test="updateTime != null">update_time = #{updateTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteVoucherOrderById" parameterType="Long">
        delete from tb_voucher_order where id = #{id}
    </delete>

    <delete id="deleteVoucherOrderByIds" parameterType="String">
        delete from tb_voucher_order where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>