<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartlive.chat.mapper.UserSessionsMapper">

    <resultMap type="com.smartlive.chat.domain.UserSessions" id="UserSessionsResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="sessionId"    column="session_id"    />
        <result property="targetUid"    column="target_uid"    />
    </resultMap>

    <sql id="selectUserSessionsVo">
        select id, user_id, session_id, target_uid from tb_user_sessions
    </sql>

    <select id="selectUserSessionsList" parameterType="com.smartlive.chat.domain.UserSessions" resultMap="UserSessionsResult">
        <include refid="selectUserSessionsVo"/>
        <where>
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="sessionId != null "> and session_id = #{sessionId}</if>
            <if test="targetUid != null "> and target_uid = #{targetUid}</if>
        </where>
    </select>

    <select id="selectUserSessionsById" parameterType="Long" resultMap="UserSessionsResult">
        <include refid="selectUserSessionsVo"/>
        where id = #{id}
    </select>

    <insert id="insertUserSessions" parameterType="com.smartlive.chat.domain.UserSessions" useGeneratedKeys="true" keyProperty="id">
        insert into tb_user_sessions
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="sessionId != null">session_id,</if>
            <if test="targetUid != null">target_uid,</if>
        </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="sessionId != null">#{sessionId},</if>
            <if test="targetUid != null">#{targetUid},</if>
        </trim>
    </insert>

    <update id="updateUserSessions" parameterType="com.smartlive.chat.domain.UserSessions">
        update tb_user_sessions
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="sessionId != null">session_id = #{sessionId},</if>
            <if test="targetUid != null">target_uid = #{targetUid},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteUserSessionsById" parameterType="Long">
        delete from tb_user_sessions where id = #{id}
    </delete>

    <delete id="deleteUserSessionsByIds" parameterType="String">
        delete from tb_user_sessions where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>