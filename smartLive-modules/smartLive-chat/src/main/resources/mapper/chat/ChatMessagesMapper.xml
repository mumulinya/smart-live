<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.smartlive.chat.mapper.ChatMessagesMapper">
    
    <resultMap type="com.smartlive.chat.domain.ChatMessages" id="ChatMessagesResult">
        <result property="id"    column="id"    />
        <result property="sessionId"    column="session_id"    />
        <result property="fromUid"    column="from_uid"    />
        <result property="toUid"    column="to_uid"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="createTime"    column="create_time"    />
    </resultMap>

    <sql id="selectChatMessagesVo">
        select id, session_id, from_uid, to_uid, content, status, create_time from chat_messages
    </sql>

    <select id="selectChatMessagesList" parameterType="com.smartlive.chat.domain.ChatMessages" resultMap="ChatMessagesResult">
        <include refid="selectChatMessagesVo"/>
        <where>  
            <if test="sessionId != null "> and session_id = #{sessionId}</if>
            <if test="fromUid != null "> and from_uid = #{fromUid}</if>
            <if test="toUid != null "> and to_uid = #{toUid}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="status != null "> and status = #{status}</if>
        </where>
    </select>
    
    <select id="selectChatMessagesById" parameterType="Long" resultMap="ChatMessagesResult">
        <include refid="selectChatMessagesVo"/>
        where id = #{id}
    </select>

    <insert id="insertChatMessages" parameterType="com.smartlive.chat.domain.ChatMessages">
        insert into chat_messages
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="id != null">id,</if>
            <if test="sessionId != null">session_id,</if>
            <if test="fromUid != null">from_uid,</if>
            <if test="toUid != null">to_uid,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="status != null">status,</if>
            <if test="createTime != null">create_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="id != null">#{id},</if>
            <if test="sessionId != null">#{sessionId},</if>
            <if test="fromUid != null">#{fromUid},</if>
            <if test="toUid != null">#{toUid},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="createTime != null">#{createTime},</if>
         </trim>
    </insert>

    <update id="updateChatMessages" parameterType="com.smartlive.chat.domain.ChatMessages">
        update chat_messages
        <trim prefix="SET" suffixOverrides=",">
            <if test="sessionId != null">session_id = #{sessionId},</if>
            <if test="fromUid != null">from_uid = #{fromUid},</if>
            <if test="toUid != null">to_uid = #{toUid},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="createTime != null">create_time = #{createTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteChatMessagesById" parameterType="Long">
        delete from chat_messages where id = #{id}
    </delete>

    <delete id="deleteChatMessagesByIds" parameterType="String">
        delete from chat_messages where id in
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
</mapper>